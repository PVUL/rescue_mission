<h1>Question Details</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <tr>
    <td><%= @question.try(:title) %></td>
    <td><%= @question.try(:body) %></td>
  </tr>
</table>

<%- if !@question.answers.empty? -%>
  <table>
    <th>Answers</th>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.body %></td>
        <td><%= link_to 'edit', answer_path(answer) %></td>
        <td><%= link_to 'delete', answer_path(answer), method: :delete %></td>
        </tr>
    <% end %>

  </table>
<%- end -%>

<%= render 'answers/new' %><br>

<%= link_to 'Back to questions', questions_path %>
